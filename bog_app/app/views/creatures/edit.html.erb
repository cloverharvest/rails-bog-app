<h2>Edit a New Creature</h2>
<%= form_for @creature do |f| %>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>
    <div>
      <%= f.submit "Save Creature" %>
    </div>
  <% end %>
